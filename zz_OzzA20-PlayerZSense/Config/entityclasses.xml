<Ozzland>

	<!-- Show local zombies in compass -->
	<append xpath="/entity_classes/entity_class[@name='playerMale']/property[@name='NavObject']/@value">,zombie</append>
	<append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']/property[@name='NavObject']/@value">,zombie</append>
	<append xpath="/entity_classes/entity_class[@name='zombieTemplateMale']/property[@name='NavObject']/@value">,zombie</append>
	<append xpath="//entity_class[contains(@name, 'zombie')]/property[@name='NavObject']/@value">,zombie</append>


	<append xpath="//entity_class[contains(@name, 'zombie')]">
		<property name="CompassUpIcon" value="ui_game_symbol_enemy_dot_up" />
		<property name="CompassDownIcon" value="ui_game_symbol_enemy_dot_down" />
	</append>


</Ozzland>