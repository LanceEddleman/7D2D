<Ozzland>
	<!-- Added from Lavendarjosh: Josh's QoL Perks -->

	<!-- decreases lockpicking time and lockpick break chance -->
	<set xpath="/progression/perks/perk[@name='perkLockPicking']/effect_group/passive_effect[@name='LockPickTime']/@value">.25,.75</set>
	<set xpath="/progression/perks/perk[@name='perkLockPicking']/effect_group/passive_effect[@name='LockPickBreakChance']/@value">.3,.9</set>
	
	<!-- improves Treasure Hunter radius decrease -->
	<set xpath="/progression/perks/perk[@name='perkTreasureHunter']/effect_group/passive_effect[@name='TreasureBlocksPerReduction']/@value">0,-4,-6,-8</set>
		
	<!-- decreases Slow Metabolism food & water consumption for stamina  -->
	<set xpath="/progression/perks/perk[@name='perkSlowMetabolism']/effect_group/passive_effect[@name='WaterLossPerStaminaPointGained']/@value">-.1,-.5</set>
	<set xpath="/progression/perks/perk[@name='perkSlowMetabolism']/effect_group/passive_effect[@name='FoodLossPerStaminaPointGained']/@value">-.1,-.5</set>
	
	<!-- decreases jump stamina consumption  -->
	<set xpath="/progression/perks/perk[@name='perkParkour']/effect_group/passive_effect[@name='StaminaLoss']/@value">-.2,-.8</set>
	
	<!-- adds 20% run speed bonus per level to Rule One Cardio -->
	<append xpath="/progression/perks/perk[@name='perkRuleOneCardio']/effect_group">
		<passive_effect name="RunSpeed" operation="perc_add" level="1,3" value="0.2,0.6"/>
	</append>

