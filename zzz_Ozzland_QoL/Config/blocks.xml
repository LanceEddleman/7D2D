<Ozzland>

	<!-- Spotlight rotations -->
	<set xpath="//block[@name='spotlightPlayer']/property[@name='OnlySimpleRotations']/@value">false</set>

	<!-- From fatrap grow at ground level-->
	<set xpath="/blocks/block[@name='cropsGrowingMaster']/property[@name='PlantGrowing.FertileLevel']/@value">0</set> 


	<!-- Update Dew Collector to be placeable on toip of buildings -->
	<append xpath="/blocks/cntDewCollector">
        <property name="IsTerrainDecoration" value="true" />
	</append>
	<set xpath="/blocks/block[@name='cntDewCollector']/property[@name='RestrictSubmergedPlacement']/@value">false</set>

	<!-- Cement filler block -->
	<append xpath="/blocks">
		<!-- NOT_A_SHAPE -->
		<block name="CementFiller">
			<!-- <property name="CustomIcon" value="parkingBlock"/> -->
			<property name="CustomIcon" value="bridgeMetalRivetBlock"/>
			<property name="CustomIconTint" value="6699cc"/>
			<!-- <property name="Texture" value="329,8,8,8,8,8"/> -->
			<!-- Ice -->
			<!-- <property name="Texture" value="569,569,569,569,569,569"/> -->
			<!-- <property name="Texture" value="279,279,279,279,279,279"/> -->
			<!-- <property name="Texture" value="440"/> -->
			<!-- <property name="Texture" value="6,569,569,569,569,569"/> -->
			<!-- <property name="Texture" value="8"/> -->
			<!-- <property name="UiBackgroundTexture" value="8"/> -->
			<property name="Extends" value="concreteNoUpgradeMaster"/>
			<!-- <property name="UseGlobalUV" value="L,L,D,D,D,D"/> -->
			<property name="Material" value="Mbridge_concrete"/>
			<property name="NoScrapping" value="true"/>
			<property name="MaxDamage" value="3500"/>
			<property name="Shape" value="Terrain"/>
			<property name="Mesh" value="terrain"/>
			<!-- <property name="Texture" value="315"/> -->
			<property name="TerrainIndex" value="6"/>
			<property name="ImposterExclude" value="true"/>
			<property name="Map.Color" value="40,60,80"/>
			<property class="RepairItems">
				<property name="resourceConcreteMix" value="5"/>
			</property>
			<property name="Group" value="Building"/>
			<drop event="Harvest" name="resourceRockSmall" count="27" tag="oreWoodHarvest"/>
			<drop event="Destroy" count="0"/>
			<drop event="Fall" name="terrDestroyedStone" count="1" prob="0.75" stick_chance="1"/>
			<property name="CanMobsSpawnOn" value="true"/>

			<!-- <property name="BuffsWhenWalkedOn" value="meeptrigger"/> -->  <!-- added from rewtgr mod -->
			<property name="EconomicValue" value="45"/>
			<property name="EconomicBundleSize" value="20"/>
			<property name="FilterTags" value="MC_outdoor,SC_terrain"/>
			<property name="SortOrder1" value="d0k0"/>
			<property name="SortOrder2" value="0050"/>
			<!-- <property name="DisplayType" value="blockTerrainHardened"/> -->
		</block>
	</append>

	<!-- Leviathan_0ne: Assorted QOL Tweaks -->
	<!-- Makes crops drop guaranteed seeds, base game 50% chance making it too difficult to farm
		This also adds in varied seed drops too! -->
	Feel Free to use this coding for your own farming modifactions!
	<set xpath="/blocks/block[@name='3HarvestPlayer']/drop[@event='Destroy'][@name='1']/@count">1,3</set>
	<set xpath="/blocks/block[@name='3HarvestPlayer']/drop[@event='Destroy'][@name='1']/@prob">0.5</set>
	
