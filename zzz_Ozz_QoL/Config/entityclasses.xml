<Ozzland>

	<!-- // Khaine's 60-slot Bigger Backpack Mod + A21 Doughs-Backpack AddEncumbreance, Edit player entity to decrease carry capacity -->
	<set xpath="/entity_classes/entity_class[@name='playerMale']/effect_group/passive_effect[@name='CarryCapacity']/@value">5</set>

	<!-- // Gazz - Loot bag timer -->
	<append xpath="/entity_classes/entity_class[@name='EntityLootContainerRegular']"><property name="TimeStayAfterDeath" value="1500"/></append>
	<append xpath="/entity_classes/entity_class[@name='EntityLootContainerStrong']"><property name="TimeStayAfterDeath" value="1500"/></append>
	<append xpath="/entity_classes/entity_class[@name='EntityLootContainerBoss']"><property name="TimeStayAfterDeath" value="1500"/></append>

    <!-- Loot containers stick around for 60 minutes, entire night if using 24-hour cycle of 120 minutes and daylight of 12 hours. -->
